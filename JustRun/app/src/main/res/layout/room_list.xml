<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="kr.ac.kumoh.ce.s20120420.JustRun.MainActivity"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#bbdefb"
        android:gravity="right">
        <Button
            android:id="@+id/explain"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:textColor="#3d5687"
            android:background="@drawable/back_room_create"
            android:drawableLeft="@drawable/explain"
            android:padding="5dp"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_weight="1.00"
        android:layout_margin="8dp"
        android:dividerHeight="8dp"
        android:divider="#ffffff"
        ></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#bbdefb">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8">
            <Button
                android:id="@+id/roomBtn"
                android:background="@drawable/back_room_create"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_margin="12dp"
                android:text="방 만 들 기"
                android:textSize="25sp"
                android:textColor="#3d5687"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/newBtn"
                android:background="@drawable/back_room_create"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_margin="12dp"
                android:text="새로고침"
                android:textColor="#3d5687"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>