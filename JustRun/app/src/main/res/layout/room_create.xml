<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/createRoom"
    android:background="@drawable/back_cover_num"
    tools:context="kr.ac.kumoh.ce.s20120420.JustRun.MainActivity">
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="방 제목 :"
            android:textSize="20dp"
            android:textColor="#3d5687"/>
        <EditText
            android:id="@+id/createTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/abc"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#3d5687"
            android:text="" />
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3d5687"
            android:entries="@array/radius">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/time"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#3d5687"
            android:text="" />
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/time">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textColor="#3d5687"
                android:text="공개" />
            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3d5687"
                android:text="비공개" />
        </RadioGroup>
        <EditText
            android:id="@+id/createPwd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:enabled="false"
            android:textColor="#3d5687"
            android:textSize="20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/createBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/back_room_create"
        android:textColor="#3d5687"
        android:textSize="20sp"
        android:text="방만들기"/>


</LinearLayout>