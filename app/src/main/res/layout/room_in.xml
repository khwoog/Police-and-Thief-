<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/roomInNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" No : 001"
            android:textSize="20sp"
            android:textColor="#7777ff"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:id="@+id/roomInTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이것은 방 제목의 예입니다."
            android:textSize="20sp"
            android:textColor="#7777ff"
            android:layout_weight="2"
            android:gravity="right"
            ></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경찰 6  VS  도둑 6"
            android:textSize="20sp"
            android:textColor="#ff6666"
            android:layout_weight="1"
            android:gravity="center"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"            >
            <Button
                android:id="@+id/user1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user1"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>

            <Button
                android:id="@+id/user2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user2"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>

            <Button
                android:id="@+id/user3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user3"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">
            <Button
                android:id="@+id/user4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user4"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
            <Button
                android:id="@+id/user5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user5"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
            <Button
                android:id="@+id/user6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user6"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">
            <Button
                android:id="@+id/user7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user7"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
            <Button
                android:id="@+id/user8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user8"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
            <Button
                android:id="@+id/user9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user9"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">
            <Button
                android:id="@+id/user10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user10"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
            <Button
                android:id="@+id/user11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user11"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
            <Button
                android:id="@+id/user12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user12"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="2">
        <Button
            android:id="@+id/polic"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/button_police"/>
        <Button
            android:id="@+id/thief"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/button_thief"/>
    </LinearLayout>
    <Button
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Play"
        android:background="@drawable/button_play"/>


</LinearLayout>