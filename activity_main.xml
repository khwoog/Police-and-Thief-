<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/roomInNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" No : 001"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="#f7a9a7"
            ></TextView>
        <TextView
            android:id="@+id/roomInTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이것은 방 제목의 예입니다."
            android:textSize="15sp"
            android:textColor="#111111"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            ></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="경찰 6"
        android:textSize="20sp"
        android:textColor="#558ed5"
        android:layout_weight="1"
        android:gravity="right"
        ></TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_vs"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="도둑 6"
            android:textSize="20sp"
            android:textColor="#e46c0a"
            android:layout_weight="1"
            android:gravity="left"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"            >
            <Button
                android:id="@+id/user1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user1"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>

            <Button
                android:id="@+id/user2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user2"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>

            <Button
                android:id="@+id/user3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user3"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">
            <Button
                android:id="@+id/user4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user4"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
            <Button
                android:id="@+id/user5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user5"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
            <Button
                android:id="@+id/user6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user6"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">
            <Button
                android:id="@+id/user7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user7"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
            <Button
                android:id="@+id/user8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user8"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
            <Button
                android:id="@+id/user9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user9"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">
            <Button
                android:id="@+id/user10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user10"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
            <Button
                android:id="@+id/user11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user11"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
            <Button
                android:id="@+id/user12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="user12"
                android:textColor="#000000"
                android:background="@drawable/edge_default"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="2">
        <Button
            android:id="@+id/policBtn"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/button_police"/>
        <Button
            android:id="@+id/thiefBtn"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/button_thief"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">
        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/button_play"/>
    </LinearLayout>
</LinearLayout>