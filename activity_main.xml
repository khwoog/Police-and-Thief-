<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1c313a">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:background="@drawable/back_title">
        <TextView
            android:id="@+id/roomInNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text=" No : 001"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffff"
            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="left">
            <TextView
                android:id="@+id/roomInTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이것은 방 제목의 예입니다."
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                ></TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <Button
                        android:id="@+id/user1"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:text="User1"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/edge_thief_master"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <Button
                        android:id="@+id/user2"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:text="User2"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/edge_thief"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <Button
                        android:id="@+id/user3"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:text="User3"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/edge_thief_ready"/>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/user4"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="User4"
                    android:layout_margin="5dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/edge_thief"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/user5"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="User5"
                    android:layout_margin="5dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/edge_police_ready"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/user6"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="User6"
                    android:layout_margin="5dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/edge_police"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/user7"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="User7"
                    android:layout_margin="5dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/edge_police"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/user8"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="User8"
                    android:layout_margin="5dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/edge_police"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/user9"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="User9"
                    android:layout_margin="5dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/edge_police_ready"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/user10"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="User10"
                    android:layout_margin="5dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/edge_default"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/user11"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="User11"
                    android:layout_margin="5dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/edge_default"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/user12"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="User12"
                    android:layout_margin="5dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/edge_default"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">
            <Button
                android:id="@+id/policBtn"
                android:layout_width="130dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_police"/>
            <Button
                android:id="@+id/thiefBtn"
                android:layout_width="130dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_thief"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">
            <Button
                android:id="@+id/readyBtn"
                android:layout_width="270dp"
                android:layout_height="39dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_ready"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>